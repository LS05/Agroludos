<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <import resource="classpath:agroludos/beans/utility.xml" />
    <import resource="classpath:agroludos/beans/transferobject.xml" />
    
	<bean id="fileFactory" class="agroludos.integration.dao.file.FileFactory" />
	
	<bean id="xmlDaoFactory" class="agroludos.integration.dao.file.xml.XmlDAOFactory" />
	
	<bean id="txtDaoFactory" class="agroludos.integration.dao.file.txt.TxtDAOFactory" />
	
	<bean id="xmlConfigFile" class="agroludos.integration.dao.file.xml.XMLConfigFile">
		<constructor-arg ref="xmlData" />
	</bean>
	
	<bean id="xmlConfDAO" 
		  class="agroludos.integration.dao.file.xml.XmlConfigurazioneDAO"
		  factory-bean="xmlDaoFactory"
		  factory-method="getConfigurazioneDAO">
		<property name="xmlFile" ref="xmlConfigFile" />
		<property name="utXml" ref="utilityXml" />
	</bean>
	
	<bean id="dbFactory" class="agroludos.integration.dao.db.DBFactory" />
	
	<bean id="mySqlDaoUtil" class="agroludos.integration.dao.db.mysql.MySqlDAO" />
	
	<bean id="mysqlAgroludosDAO" 
		  class="agroludos.integration.dao.db.mysql.MySqlAgroludosDAO"
		  abstract="true">
		  <constructor-arg ref="toFactory" />
	</bean>
	
	<bean id="mySqlDaoFactory" 
		  class="agroludos.integration.dao.db.mysql.MySqlDAOFactory"
		  factory-bean="dbFactory"
		  factory-method="createMySqlDAOFactory">
		  <constructor-arg ref="mySqlDaoUtil" />
	</bean>
		  
	<bean id="mySqlUtenteDAO" class="agroludos.integration.dao.db.mysql.MySqlUtenteDAO"
		factory-bean="mySqlDaoFactory"
		factory-method="getUtenteDAO">
	</bean>
	
	<bean id="xmlData" class="agroludos.integration.dao.file.xml.XmlData" />
	
</beans>