<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="classpath:agroludos/beans/system.xml" />

	<bean id="mySqlDaoFactory" 
		  class="agroludos.integration.dao.db.mysql.MySqlDAOFactory">
	</bean>
	
	<bean id="mysqlAgroludosDAO" 
		  class="agroludos.integration.dao.db.mysql.MySqlAgroludosDA"
		  abstract="true">
		  <property name="toFact" ref="toFactory" />
	</bean>
		  
	<bean id="mySqlUtenteDAO" class="agroludos.integration.dao.db.mysql.MySqlUtenteDAO"
		factory-bean="mySqlDaoFactory"
		factory-method="getUtenteDAO">
	</bean>
	
</beans>