<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="agroludos.to.Configurazione" table="tbl_configurazione" catalog="agroludos">
        <id name="idConf" type="java.lang.Integer">
            <column name="idconfigurazione" />
            <generator class="increment" />
        </id>
        <property name="statoConf" type="boolean">
            <column name="stato" />
        </property>
        <property name="pathConf" type="string">
            <column name="conf_file" not-null="true" />
        </property>
        <property name="tipoDB" type="string">
            <column name="tipo" not-null="true" />
        </property>
        <property name="nomeDB" type="string">
            <column name="nome" not-null="true" />
        </property>
        <property name="serverDB" type="string">
            <column name="server" not-null="true" />
        </property>
        <property name="portaDB" type="string">
            <column name="porta" not-null="true" />
        </property>
        <property name="userDB" type="text">
            <column name="username" not-null="true" />
        </property>
        <property name="pwdDB" type="text">
            <column name="password" not-null="true" />
        </property>
    </class>
</hibernate-mapping>