<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="agroludos.to.Iscrizione" table="tbl_iscrizione"
		catalog="agroludos">
		<id name="id" type="java.lang.Integer">
			<column name="idiscrizione" />
			<generator class="increment" />
		</id>
		<property name="data" type="date">
			<column name="data" not-null="true" />
		</property>
		<property name="stato" type="integer">
			<column name="stato" not-null="true" default="0" />
		</property>
		<property name="idcompetizione" type="integer">
			<column name="idcompetizione" not-null="true" />
		</property>
		<many-to-one name="partecipante" class="agroludos.to.Partecipante"
			lazy="false">
			<column name="idpartecipante" not-null="true" />
		</many-to-one>
		<set name="optionals" cascade="all" table="tbl_opt_iscr">
			<key column="idiscrizione" />
			<many-to-many column="idoptional" class="agroludos.to.Optional" />
		</set>
	</class>
	<query name="getAllIscrizioni">
        <![CDATA[ from agroludos.to.Iscrizione i where i.stato = 1 ]]></query>
	<query name="updateIscrizione">
        <![CDATA[ update agroludos.to.Iscrizione i set i.data = :data, i.stato = :stato where i.id = :id ]]></query>
	<query name="annullaIscrizione">
        <![CDATA[ update agroludos.to.Iscrizione i set i.stato = :stato where i.id = :id ]]></query>
</hibernate-mapping>