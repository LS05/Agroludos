<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="agroludos.to.Iscrizione" table="tbl_iscrizione"
		catalog="agroludos">
		<id name="id" type="java.lang.Integer">
			<column name="idiscrizione" />
			<generator class="increment" />
		</id>
		<property name="data" type="date">
			<column name="data" not-null="true" />
		</property>
		<property name="stato" type="integer">
			<column name="stato" not-null="true" default="1" />
		</property>
	</class>
	<query name="updateIscrizione">
        <![CDATA[ update agroludos.to.Icrizione i set i.data = :data, i.stato = :stato o.id = :id ]]></query>	
	<query name="annullaIscrizione">
        <![CDATA[ from agroludos.to.Icrizione i set i.stato = :stato where i.id = :id ]]></query>
</hibernate-mapping>