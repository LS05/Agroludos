<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="agroludos.to.Competizione" table="tbl_competizione"
		catalog="agroludos">
		<id name="id" type="java.lang.Integer">
			<column name="idcompetizione" />
			<generator class="increment" />
		</id>
		<property name="nome" type="string">
			<column name="nome" not-null="true" />
		</property>
		<property name="data" type="date">
			<column name="data" not-null="true" />
		</property>
		<property name="nmin" type="integer">
			<column name="nmin" not-null="true" default="1" />
		</property>
		<property name="nmax" type="integer">
			<column name="nmax" not-null="true" default="1" />
		</property>
		<property name="costo" type="double">
			<column name="costo" not-null="true" />
		</property>
		<property name="descrizione" type="string">
			<column name="descrizione" not-null="true" />
		</property>
		<property name="tipo" type="integer">
			<column name="tipocomp" not-null="true" default="1" />
		</property>
		<property name="stato" type="integer">
			<column name="statocomp" not-null="true" default="1" />
		</property>
		<property name="mdc" type="integer">
			<column name="idmdc" not-null="true" default="1" />
		</property>
		<set name="optionals" cascade="all" table="tbl_opt_comp">
			<key column="idcompetizione" />
			<many-to-many column="idoptional" class="agroludos.to.Optional" />
		</set>
		<set name="partecipanti" cascade="all" table="tbl_iscrizione">
			<key column="idcompetizione" />
			<many-to-many column="idpartecipante" class="agroludos.to.Partecipante" />
		</set>
		<set name="iscrizioni" cascade="all" table="tbl_iscrizione">
			<key column="idcompetizione" />
			<one-to-many class="agroludos.to.Iscrizione" />
		</set>
	</class>
	<query name="getAllCompetizione">
        <![CDATA[ from agroludos.to.Competizione c ]]></query>
	<query name="getCompetizioneByTipo">
        <![CDATA[ from agroludos.to.Competizione c where c.tipo = ?]]></query>
	<query name="getCompetizioneById">
        <![CDATA[ from agroludos.to.Competizione c where c.id = ?]]></query>
	<query name="getCompetizioneByMdc">
        <![CDATA[ from agroludos.to.Competizione c where c.mdc = ?]]></query>
	<sql-query name="getNomeStatoComp">
       <![CDATA[ SELECT tbl_statocomp.nome FROM tbl_statocomp WHERE tbl_statocomp.idstatocomp = ? ]]></sql-query>
	<sql-query name="getNomeTipoComp">
       <![CDATA[ SELECT tbl_tipocomp.nome FROM tbl_tipocomp WHERE tbl_tipocomp.idtipocomp = ? ]]></sql-query>
</hibernate-mapping>