<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="agroludos.to.TipoOptional" table="tbl_tipoopt"
		catalog="agroludos">
		<id name="id" type="java.lang.Integer">
			<column name="idtipooptional" />
			<generator class="increment" />
		</id>
		<property name="nome" type="string">
			<column name="nome" not-null="true" />
		</property>
		<set name="optionals" cascade="all" table="tbl_optional" lazy="false">
			<key column="tipoopt" />
			<one-to-many class="agroludos.to.Optional" />
		</set>
		<set name="optionalAttivi" cascade="all" table="tbl_optional" where="stato = 1" lazy="false">
			<key column="tipoopt" />
			<one-to-many class="agroludos.to.Optional" />
		</set>
	</class>
	<query name="getAllTipoOptional">
        <![CDATA[ from agroludos.to.TipoOptional o ]]></query>
</hibernate-mapping>